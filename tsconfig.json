{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@momentum/coinbase": [
        "libs/coinbase/src"
      ],
      "@momentum/coinbase/*": [
        "libs/coinbase/src/*"
      ],
      "@momentum/alpaca": [
        "libs/alpaca/src"
      ],
      "@momentum/alpaca/*": [
        "libs/alpaca/src/*"
      ],
      "@momentum/events": [
        "libs/events/src"
      ],
      "@momentum/events/*": [
        "libs/events/src/*"
      ]
    }
  }
}